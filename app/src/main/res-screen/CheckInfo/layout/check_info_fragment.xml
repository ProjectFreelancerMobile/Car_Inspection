<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <com.car_inspection.library.commonview.CustomProgress
            android:id="@+id/pgStep"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_black"
            android:padding="1dp" />

        <com.car_inspection.library.commonview.CTextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pgStep"
            android:layout_marginTop="30dp"
            android:text="@string/step1_1_basic_info"
            app:customFont="@string/font_semibold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/day_checking"
                app:customFont="@string/font_regular" />


            <com.car_inspection.library.commonview.CTextView
                android:id="@+id/tvCalendar"
                android:gravity="center_vertical|right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/icon_calenda"
                android:textSize="22sp"
                app:customFont="@string/font_awesome" />

            <com.car_inspection.library.commonview.CTextView
                android:id="@+id/tvDate"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvCalendar"
                android:background="@drawable/background_rectangle_border_gray"
                android:text="28/12/2018" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/checker"
                app:customFont="@string/font_regular" />


            <com.car_inspection.library.commonview.CEditTextInput
                android:id="@+id/edtChecker"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"
                android:paddingLeft="5dp"
                app:customFont="@string/font_regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/owner"
                app:customFont="@string/font_regular" />


            <com.car_inspection.library.commonview.CEditTextInput
                android:id="@+id/edtOwner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"
                android:paddingLeft="5dp"
                app:customFont="@string/font_regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/license_plates"
                app:customFont="@string/font_regular" />


            <com.car_inspection.library.commonview.CEditTextInput
                android:id="@+id/edtLicensePlate"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"
                android:paddingLeft="5dp"
                app:customFont="@string/font_regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/car_product"
                app:customFont="@string/font_regular" />


            <Spinner
                android:id="@+id/spCarProductors"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"></Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/series"
                app:customFont="@string/font_regular" />


            <Spinner
                android:id="@+id/spCarSeries"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"></Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.car_inspection.library.commonview.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/year_product"
                app:customFont="@string/font_regular" />


            <Spinner
                android:id="@+id/spYearProduct"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_rectangle_border_gray"></Spinner>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/layoutContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.car_inspection.library.commonview.CButtonState
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/black"
                app:setActive="true" />

            <com.car_inspection.library.commonview.CButtonState
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/continues"
                android:textColor="@color/black"
                app:setActive="true" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>